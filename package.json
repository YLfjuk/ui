        "knip": "^5.46.5",
        "turbo": "^2.5.0",
        "vitest": "^3.1.1"
    },
    "knip": {
        "ignoreExportsUsedInFile": true
    },
    "engines": {
        "node": "^18.17.1 || ^20.3.0 || >=22.0.0"
    },
    "packageManager": "npm@11.2.0",
    "workspaces": [
        "apps/*",
        "packages/*"
